<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.model.Product" />

        <variable
            name="cartButtonClickListener"
            type="woowacourse.shopping.ui.detail.CartButtonClickListener" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.ui.detail.ProductDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.ProductDetailActivity">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background"
            app:imageUrl="@{product.imageUrl}"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="18dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@{product.name}"
            app:layout_constraintTop_toBottomOf="@id/iv_product_image"
            tools:text="[든든] 동원 스위트콘" />

        <View
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="17dp"
            android:background="@color/gray6"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name" />


        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/split_line"
            android:text="@{@string/product_price(product.price)}"
            tools:text="99,800원" />

        <LinearLayout
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="68dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/split_line"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="@{()->viewModel.decreaseItemCount()}"/>

            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{Integer.toString(viewModel.itemCount)}"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="@{()->viewModel.increaseItemCount()}"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_product_button_style"
            android:text="@string/add_product_to_cart"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="@{()->cartButtonClickListener.onClick()}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
